<h1>Send a File</h1>

<% form_for(@ul_file, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :sender_name, "My Name" %><br />
    <%= f.text_field :sender_name %>
  </p>
  <p>
    <%= f.label :recipient_email, "Email Address" %><br />
    <%= f.text_field :recipient_email %>
  </p>
  <p>
    <%= f.label :attachment, "File" %><br />
    <%= f.file_field :attachment %>
  </p>
  <p>
    <%= f.submit 'Send' %>
  </p>
<% end %>
